                    host = { '127.0.0.1', '8333' },
                    chains = {},    -- 3 does not receive '||0|'
                },
                {
                    host = { '127.0.0.1', '8334' },
                    chains = APP.server.chains,
                },
            },
        }

        MESSAGE {
            id = '1.0',
            chain = {
                key   = '',
                zeros = 0,
            },
            payload = [[
Ola Mundo!
]],
        }
    ]=];

    async do end;
    do ClientMessages;
    await 1s;

    [[
        CHAIN0 = GG.chain_flatten('||0|')
        print'===> CLIENT'
        print('>'..string.rep('=',78))
        print(GG.chain_tostring('||0|'))
        print('<'..string.rep('=',78))
    ]];
