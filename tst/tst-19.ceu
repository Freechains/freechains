        dofile 'cfg/config.lua'

        CLIENT {
            peers = {
                {
                    host = { '127.0.0.1', '8331' },
                    chains = APP.server.chains,
                },
                --{
                    --host = { '127.0.0.1', '8332' },
                    --chains = APP.server.chains,
                --},
