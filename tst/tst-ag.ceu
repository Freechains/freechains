                            key   = '',
                            zeros = 0,
                        },
                        payload = '2.2',
                    }
                }
            ]];
            await Client(&init.shared);
        end

        [[
            FC.dot( FC.chains[''][0].head, '/tmp/tst-ag-01.dot' )
        ]];
