    var int unique = 0;
    [[
        G(unique) = app_create()
        APP = G(unique)
    ]];
    spawn do
        every ANY do
            [[ APP = G(unique) ]];
        end
    end

    ///////////////////////////////////////////////////////////////////////////

    [=[
        dofile 'cfg/config.lua'

        CLIENT {
            peers = {
                {
                    host = { '127.0.0.1', '8331' },
                },
            },
        }

        MESSAGE {
            id = '1.0',
            chain = {
                key   = '',
                zeros = 0,
            },
            payload = [[
1.1
]],
        }
        MESSAGE {
            id = '1.0',
            chain = {
                key   = '',
                zeros = 0,
            },
            payload = [[
1.2
]],
        }
    ]=];

    do Init;

    async do end;
    do ClientMessages;
    await 1s;

    [[
        CHAIN0 = GG.chain_flatten('||0|')
        print'===> 1'
        print('>'..string.rep('=',78))
        print(tostring2(CHAIN0))
        print('<'..string.rep('=',78))
    ]];
